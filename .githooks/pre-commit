#!/bin/bash
# Git pre-commit hook to run formatting and linting checks

set -e

echo "ğŸ” Running pre-commit checks..."

# Run cargo fmt
echo "ğŸ“ Checking code formatting..."
cargo fmt --all -- --check || {
    echo "âŒ Code needs formatting. Running 'cargo fmt --all'..."
    cargo fmt --all
    echo "âœ… Code formatted. Please review and stage the changes."
    exit 1
}

# Run clippy
echo "ğŸ” Running clippy..."
cargo clippy --all -- -D warnings || {
    echo "âŒ Clippy found issues. Please fix them before committing."
    exit 1
}

# Build the project
echo "ğŸ”¨ Building project..."
cargo build --all || {
    echo "âŒ Build failed. Please fix errors before committing."
    exit 1
}

# Run tests
echo "ğŸ§ª Running tests..."
cargo test --all || {
    echo "âŒ Tests failed. Please fix them before committing."
    exit 1
}

echo "âœ… All pre-commit checks passed!"